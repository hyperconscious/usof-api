{
  "compilerOptions": {
    "target": "ES6",
    "removeComments": true,
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "strict": true,
    "allowJs": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
  },
  "include": ["./src/**/*.ts", "./src/types/**/*"],
  "exclude": ["./node_modules"],
  "typeRoots": ["./node_modules/@types/index.d.ts"]
  }