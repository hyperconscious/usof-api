{
    "name": "usof",
    "version": "1.0.0",
    "description": "Node.js Rest Apis with Express, TypeOrm & MySQL",
    "main": ".eslintrc.js",
    "scripts": {
        "build": "tsc",
        "start": "nodemon",
        "typeorm": "ts-node ./node_modules/typeorm/cli.js",
        "typeorm:cli": "ts-node ./node_modules/typeorm/cli -d src/config/ormconfig.ts",
        "db:drop": "npm run typeorm:cli schema:drop",
        "migration:generate": "npm run typeorm:cli migration:generate -n",
        "db:migrate": "npm run typeorm:cli migration:run",
        "db:revert": "npm run typeorm:cli migration:revert",
        "db:sync": "npm run typeorm:cli schema:sync && npm run db:migrate",
        "format": "prettier --write \"src/**/*.{js,ts,json,css,md}\""
    },
    "author": "Nikonov Kir",
    "license": "MIT",
    "dependencies": {
        "bcrypt": "^5.1.1",
        "bcryptjs": "^2.4.3",
        "chalk": "^4.1.2",
        "class-validator": "^0.14.1",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "express": "^4.21.1",
        "express-async-errors": "^3.1.1",
        "http-status-codes": "^2.3.0",
        "joi": "^17.13.3",
        "jsonwebtoken": "^9.0.2",
        "morgan": "^1.10.0",
        "multer": "^1.4.5-lts.1",
        "mysql2": "^3.11.3",
        "nodemailer": "^6.9.15",
        "reflect-metadata": "^0.2.2",
        "typeorm": "^0.3.20"
    },
    "devDependencies": {
        "@eslint/js": "^9.12.0",
        "@types/bcryptjs": "^2.4.6",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/jsonwebtoken": "^9.0.7",
        "@types/morgan": "^1.9.9",
        "@types/multer": "^1.4.12",
        "@types/node": "^22.7.5",
        "@types/nodemailer": "^6.4.16",
        "@typescript-eslint/eslint-plugin": "^8.8.1",
        "@typescript-eslint/parser": "^8.8.1",
        "eslint": "^9.12.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-autofix": "^2.2.0",
        "eslint-plugin-prettier": "^5.2.1",
        "eslint-plugin-react": "^7.37.1",
        "eslint-plugin-simple-import-sort": "^12.1.1",
        "globals": "^15.11.0",
        "nodemon": "^3.1.7",
        "prettier": "^3.3.3",
        "ts-node": "^10.9.2",
        "typescript": "^5.6.3",
        "typescript-eslint": "^8.8.1"
    }
}
